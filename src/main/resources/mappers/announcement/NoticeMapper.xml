<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssg.wms.announcement.mappers.NoticeMapper">

    <!-- NoticeDTO ResultMap -->
    <resultMap id="NoticeResultMap" type="com.ssg.wms.announcement.domain.NoticeDTO">
        <id property="noticeIndex" column="notice_index"/>
        <result property="nTitle" column="n_title"/>
        <result property="nContent" column="n_content"/>
        <result property="nCreateAt" column="n_createAt"/>
        <result property="nUpdateAt" column="n_updateAt"/>
        <result property="nPriority" column="n_priority"/>
        <result property="adminIndex" column="admin_index"/>
    </resultMap>

    <!-- 공지사항 등록 -->
    <insert id="insertNotice" parameterType="com.ssg.wms.announcement.domain.NoticeDTO"
            useGeneratedKeys="true" keyProperty="noticeIndex">
        INSERT INTO announcement (
            n_title,
            n_content,
            n_priority,
            admin_index
        ) VALUES (
                     #{nTitle},
                     #{nContent},
                     #{nPriority},
                     #{adminIndex}
                 )
    </insert>

    <!-- 공지사항 목록 조회 -->
    <select id="selectNotices" resultMap="NoticeResultMap">
        SELECT * FROM announcement
        WHERE 1=1
        <if test="keyword != null and keyword != ''">
            AND (n_title LIKE CONCAT('%', #{keyword}, '%')
            OR n_content LIKE CONCAT('%', #{keyword}, '%'))
        </if>
        ORDER BY n_priority DESC, n_createAt DESC
    </select>

    <!-- 공지사항 상세 조회 -->
    <select id="selectNotice" resultMap="NoticeResultMap">
        SELECT * FROM announcement
        WHERE notice_index = #{notice_index}
    </select>

    <!-- 공지사항 수정 -->
    <update id="updateNotice" parameterType="com.ssg.wms.announcement.domain.NoticeDTO">
        UPDATE announcement
        SET n_title = #{nTitle},
            n_content = #{nContent},
            n_priority = #{nPriority},
            n_updateAt = NOW()
        WHERE notice_index = #{noticeIndex}
    </update>

    <!-- 공지사항 삭제 -->
    <delete id="deleteNotice">
        DELETE FROM announcement
        WHERE notice_index = #{notice_index}
    </delete>

</mapper>